@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center text-white d-flex flex-column justify-content-center align-items-center">
    <h1 class="display-3 fw-bold mb-3">Welcome to MovieCollection</h1>
    <p class="lead mb-4">Your personal place to explore, organize and enjoy your favorite movies.</p>

    <div class="d-flex gap-3">
        <a class="btn btn-primary btn-lg" asp-controller="Movies" asp-action="Index">
            <i class="bi bi-collection-play-fill"></i> Browse Movies
        </a>

        <a class="btn btn-outline-light btn-lg" asp-controller="Genres" asp-action="Index">
            <i class="bi bi-tags-fill"></i> Genres
        </a>
    </div>
</div>

<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <i class="bi bi-film fs-1 text-primary"></i>
            <h4 class="mt-3">Organize</h4>
            <p>Add, edit and manage your movie collection with ease.</p>
        </div>

        <div class="col-md-4 mb-4">
            <i class="bi bi-star-fill fs-1 text-warning"></i>
            <h4 class="mt-3">Rate</h4>
            <p>Give each movie a rating and keep track of your favorites.</p>
        </div>

        <div class="col-md-4 mb-4">
            <i class="bi bi-tags-fill fs-1 text-success"></i>
            <h4 class="mt-3">Explore</h4>
            <p>Browse movies by genres and discover new titles.</p>
        </div>
    </div>
</div>