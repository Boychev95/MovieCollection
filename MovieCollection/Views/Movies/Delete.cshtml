@model MovieCollection.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
}

<h1 class="mb-4 text-danger">Delete Movie</h1>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this movie?</h4>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h3 class="card-title">@Model.Title</h3>

        <p><strong>Genre:</strong> @Model.Genre.Name</p>
        <p><strong>Director:</strong> @Model.Director.FullName</p>
        <p><strong>Release Year:</strong> @Model.ReleaseYear</p>
        <p><strong>Rating:</strong> @Model.Rating / 10</p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>