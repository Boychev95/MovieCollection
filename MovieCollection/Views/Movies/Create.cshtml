@model MovieCollection.Models.Movie

@{
    ViewData["Title"] = "Create Movie";
}

<h1>Create Movie</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="ReleaseYear" class="form-label"></label>
        <input asp-for="ReleaseYear" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-select">
            @for (int i = 1; i <= 10; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="GenreId" class="form-label"></label>
        <select asp-for="GenreId" asp-items="ViewBag.Genres" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>